<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="match_parent"
	android:layout_height="match_parent">
	<LinearLayout android:layout_width="match_parent"
		android:layout_height="match_parent" android:orientation="vertical"
		android:paddingLeft="10px" android:paddingRight="10px"
		android:paddingTop="10px">

		<ImageView android:id="@+id/fileAlbumImage"
			android:layout_gravity="center"
			android:layout_width="fill_parent" android:tag="AlbumImage" android:layout_height="match_parent"></ImageView>
		<TextView android:layout_width="wrap_content" android:id="@+id/textView1"
			android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceLarge"
			android:text="Album"></TextView>
		<EditText android:layout_width="fill_parent" android:id="@+id/ALBUM"
			android:inputType="textMultiLine" android:text="TextView"
			android:layout_height="wrap_content" android:enabled="false"></EditText>
		<TextView android:layout_width="wrap_content" android:id="@+id/textView2"
			android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceLarge"
			android:text="Artist"></TextView>
		<EditText android:layout_width="fill_parent" android:id="@+id/ARTIST"
			android:enabled="false" android:inputType="textMultiLine"
			android:text="TextView" android:layout_height="wrap_content"></EditText>
		<TextView android:layout_width="wrap_content" android:id="@+id/textView3"
			android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceLarge"
			android:text="Comment"></TextView>
		<EditText android:layout_width="fill_parent" android:id="@+id/COMMENT"
			android:enabled="false" android:inputType="textMultiLine"
			android:text="TextView" android:layout_height="wrap_content"></EditText>
		<TextView android:layout_width="wrap_content" android:id="@+id/textView7"
			android:layout_height="wrap_content" android:text="ENCODER"
			android:textAppearance="?android:attr/textAppearanceLarge"></TextView>
		<EditText android:text="TextView" android:id="@+id/ENCODER"
			android:inputType="textMultiLine" android:layout_width="fill_parent"
			android:enabled="false" android:layout_height="wrap_content"></EditText>
		<TextView android:layout_width="wrap_content" android:id="@+id/textView8"
			android:layout_height="wrap_content" android:text="GENRE"
			android:textAppearance="?android:attr/textAppearanceLarge"></TextView>
		<EditText android:text="TextView" android:id="@+id/GENRE"
			android:inputType="textMultiLine" android:layout_width="fill_parent"
			android:enabled="false" android:layout_height="wrap_content"></EditText>
		<TextView android:layout_width="wrap_content" android:id="@+id/textView10"
			android:layout_height="wrap_content" android:text="TITLE"
			android:textAppearance="?android:attr/textAppearanceLarge"></TextView>
		<EditText android:text="TextView" android:id="@+id/TITLE"
			android:inputType="textMultiLine" android:layout_width="fill_parent"
			android:enabled="false" android:layout_height="wrap_content"></EditText>
		<TextView android:layout_width="wrap_content" android:id="@+id/textView13"
			android:layout_height="wrap_content" android:text="YEAR"
			android:textAppearance="?android:attr/textAppearanceLarge"></TextView>
		<EditText android:text="TextView" android:id="@+id/YEAR"
			android:inputType="textMultiLine" android:layout_width="fill_parent"
			android:enabled="false" android:layout_height="wrap_content"></EditText>
		<TextView android:layout_width="wrap_content" android:id="@+id/textView9"
			android:layout_height="wrap_content" android:text="LYRICS"
			android:textAppearance="?android:attr/textAppearanceLarge"></TextView>
		<EditText android:layout_width="fill_parent" android:id="@+id/LYRICS"
			android:inputType="textMultiLine" android:layout_height="wrap_content"
			android:enabled="false" android:text="TextView"></EditText>
		<LinearLayout android:layout_width="match_parent"
			android:layout_height="wrap_content" android:id="@+id/linearLayout1">
			<Button android:id="@+id/modifyOk" android:layout_weight="1"
				android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
			<Button android:layout_width="wrap_content"
				android:layout_gravity="right" android:layout_height="wrap_content"
				android:layout_weight="1" android:id="@+id/modifyCancle"></Button>
		</LinearLayout>
	</LinearLayout>
</ScrollView>
